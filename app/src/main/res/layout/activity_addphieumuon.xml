<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddphieumuonActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#036666"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Thêm Phiếu Mượn"
            android:textColor="@color/white"
            android:paddingLeft="65dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgPlaceholder"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#9DD5B6"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người mượn"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtTenNguoiMuon"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="Nguyễn Văn A"
            android:background="@drawable/bogoc"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="0123456789"
            android:background="@drawable/bogoc"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách mượn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtSachMuon"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="Cổ Chân Nhân, Tiên nghịch"
            android:background="@drawable/bogoc"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày mượn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtNgayMuon"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="30/5/2024"
            android:background="@drawable/bogoc"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày trả"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtNgayTra"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="30/6/2024"
            android:background="@drawable/bogoc"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtGhiChu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Đã mượn sách nhiều lần."
            android:background="@drawable/bogoc"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edtTrangThai"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="Chưa trả"
            android:background="@drawable/bogoc"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonThem"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="#248277"
                android:text="Thêm"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
