<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E1E0E0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#3B781A">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_dehaze_24" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bogoc"
            android:padding="10dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icsearch"
                android:layout_marginRight="20dp"/>


        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_account_circle_white" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bogoc"
        app:backgroundTint="@null"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượt mượn sách"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#E91E63">
            </TextView>

            <TextView
                android:id="@+id/txtLuotMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#E91E63">
            </TextView>

        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E91E63"></TextView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lượt Trả Sách"
                android:textSize="20dp"
                android:textColor="#E91E63">
            </TextView>

            <TextView
                android:id="@+id/txtLuotTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#E91E63">
            </TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bogoc"
        app:backgroundTint="@null"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="111dp"
           android:orientation="horizontal">
           <Button
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="10dp"
               android:drawableTop="@mipmap/icon_sach"
               android:text="Sách"
               android:scaleX="1.8"
               android:scaleY="1.8"
               android:padding="20dp"
               android:textSize="10dp"
               android:textColor="@color/black"
               android:background="null"
               android:layout_marginLeft="20dp">
           </Button>
           <Button
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="10dp"
               android:drawableTop="@mipmap/icon_docgia"
               android:text="Độc giả"
               android:scaleX="1.8"
               android:scaleY="1.8"
               android:padding="20dp"
               android:textSize="10dp"
               android:textColor="@color/black"
               android:background="null"
               android:layout_marginLeft="20dp">
           </Button>
           <Button
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="10dp"
               android:drawableTop="@mipmap/icon_baocao"
               android:text="Thống kê"
               android:scaleX="1.8"
               android:scaleY="1.8"
               android:padding="20dp"
               android:textSize="10dp"
               android:textColor="@color/black"
               android:background="null"
               android:layout_marginLeft="20dp">
           </Button>

       </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@mipmap/icon_them"
            android:text="Thêm"
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:padding="20dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:background="null"
            android:layout_marginLeft="20dp">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bogoc"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="@null"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sách Mượn Nhiều"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <ListView
                android:id="@+id/lvMuonNhieu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
       </LinearLayout>



</LinearLayout>