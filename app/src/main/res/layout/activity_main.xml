<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#B7DDC9">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#036666"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_dehaze_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/bogoc"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icsearch" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/baseline_account_circle_white" />
    </LinearLayout>

    <!-- Section 1 -->
    <LinearLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bogockhongvien"
        app:backgroundTint="@null"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượt mượn sách"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#248277"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/txtLuotMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="30dp"
                android:textColor="#248277">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#248277"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lượt Trả Sách"
                android:textSize="19dp"
                android:textColor="#248277"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/txtLuotTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp"
                android:textColor="#248277">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <!-- Section 2 -->
    <LinearLayout
        android:id="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bogockhongvien"
        app:backgroundTint="@null"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:drawableTop="@mipmap/icon_sach"
                android:text="Sách"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:padding="20dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:drawableTop="@mipmap/icon_docgia"
                android:text="Độc giả"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:padding="20dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:drawableTop="@mipmap/icon_baocao"
                android:text="Thống kê"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:padding="20dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent">
            </Button>
        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:drawableTop="@mipmap/icon_them"
            android:text="Thêm"
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:padding="20dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:layout_marginStart="10dp">
        </Button>
    </LinearLayout>

    <!-- Section 3 -->
    <LinearLayout
        android:id="@+id/section3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bogockhongvien"
        app:backgroundTint="@null"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách Mượn Nhiều"
            android:textColor="#248277"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="19dp"
            android:textStyle="bold"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvMuonNhieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#036666"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgTrangChu"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/home" />
        <ImageView
            android:id="@+id/imgSach"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/book" />
        <ImageView
            android:id="@+id/imgPhieuMuon"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/phieumuon" />
        <ImageView
            android:id="@+id/imgNguoiDung"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/user" />
        <ImageView
            android:id="@+id/imgCaiDat"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/setting" />
    </LinearLayout>

</RelativeLayout>
